{
  "name": "dnpk",
  "version": "0.0.1",
  "description": "modifiable turn based game + game engine in the spirit of the original Warlords by SSG",
  "main": "src/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "esdoc": "esdoc",
    "flow": "flow `# flow does not respect NODE_PATH, path alias handled in .flowconfig`",
    "i18n": "i18next 'src/**/*.{js,jsx}' -c src/l10n/i18next-parser.config.js && node src/l10n/json-to-po.js `# Extracts translation strings from code and pushes updates to .json and .po files.`",
    "lint": "eslint \"src/**/*.js?(x)\"",
    "start": "NODE_PATH=src babel-node src/index.js",
    "start-debug": "NODE_PATH=src DEBUG=* babel-node src/index.js",
    "test": "NODE_PATH=src jest --config .jest.config.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run flow && npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeremyosborne/dnpk.git"
  },
  "author": "Jeremy Osborne <jeremyosborne@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeremyosborne/dnpk/issues"
  },
  "homepage": "https://github.com/jeremyosborne/dnpk#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-flow": "^7.0.0",
    "acorn-stage3": "^0.6.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.9.0",
    "babel-plugin-lodash": "^3.3.4",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-external-nodejs-plugin": "^1.0.0",
    "esdoc-flow-plugin": "^1.0.0",
    "esdoc-node": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-config-standard-react": "^8.0.0",
    "eslint-plugin-flowtype": "^4.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.106.3",
    "husky": "^4.0.0-beta.1",
    "i18next-conv": "^9.1.0",
    "i18next-parser": "^1.0.0-beta34",
    "jest": "^24.9.0"
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "chalk": "^2.4.2",
    "debug": "^4.1.1",
    "i18next": "^17.0.11",
    "lodash": "^4.17.15",
    "sprintf-js": "^1.1.2",
    "uuid": "^3.3.2"
  }
}
