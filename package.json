{
  "name": "dnpk",
  "version": "0.0.1",
  "description": "modifiable turn based game + game engine in the spirit of the original Warlords by SSG",
  "private": "true",
  "main": "src/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "l10n": "i18next 'src/core/**/*.{js,jsx}' -c src/core/l10n/i18next-parser.config.js",
    "lint": "eslint \"src/**/*.js?(x)\"",
    "repl": "NODE_PATH=src/core:src/testing-grounds babel-node `# Start up a node repl with a corrected node path.`",
    "start": "NODE_PATH=src/core:src/testing-grounds ts-node src/testing-grounds",
    "start-babel": "NODE_PATH=src/core:src/testing-grounds babel-node src/testing-grounds",
    "test": "NODE_PATH=src/core:src/testing-grounds jest --config .jest.config.js `# append a '-- <some path name>' without the quotes to run a single file or directory of tests.`"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeremyosborne/dnpk.git"
  },
  "author": "Jeremy Osborne <jeremyosborne@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeremyosborne/dnpk/issues"
  },
  "homepage": "https://github.com/jeremyosborne/dnpk#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@tsconfig/node12": "^1.0.7",
    "acorn-stage3": "^2.1.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^4.2.5",
    "i18next-parser": "^3.3.0",
    "jest": "^26.4.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@trinkets/counter": "0.0.2",
    "@trinkets/noise": "0.0.4",
    "@trinkets/random": "0.0.9",
    "acorn": "^7.4.0",
    "ajv": "^6.12.4",
    "chalk": "^4.1.0",
    "debug": "^4.1.1",
    "del": "^5.1.0",
    "enquirer": "^2.3.6",
    "env-paths": "^2.2.0",
    "i18next": "^19.7.0",
    "lodash": "^4.17.20",
    "make-dir": "^3.1.0",
    "sprintf-js": "^1.1.2",
    "uuid": "^8.3.0"
  }
}
