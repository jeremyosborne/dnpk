{
  "extends": "@tsconfig/node12/tsconfig.json",

  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "lib": ["DOM"],
    "outDir": "dist",
    "paths": {
      "*": ["*", "src/*", "src/core/*", "src/testing-grounds/*"]
    },
    "sourceMap": true,
    "target": "es5"
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
